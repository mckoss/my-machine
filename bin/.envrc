PROJECT=my-machine

BIN_DIR="$(cd `dirname ${BASH_SOURCE[0]}` && pwd)"
PROJ_DIR="`dirname $BIN_DIR`"
DOWN_DIR="$HOME/Downloads"

if [ `uname` == "Darwin" ]; then
    PLATFORM="Mac"
elif [[ `uname` == *W32* ]]; then
    PLATFORM="Windows"
    SUDO=""
else
    PLATFORM="Linux"
fi

echo "$PROJECT: I think you are running $PLATFORM."
